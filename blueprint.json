{
    "$schema": "https://playground.wordpress.net/blueprint-schema.json",
    "landingPage": "/wp-admin/",
    "login": true,
    "preferredVersions": {
        "php": "8.3",
        "wp": "latest"
    },
    "steps": [
        {
			"step": "writeFile",
			"path": "/wordpress/wp-content/plugins/foogallery-demo-plugin.php",
			"data": {
				"resource": "url",
				"url": "https://raw.githubusercontent.com/fooplugins/foogallery-blueprint/refs/heads/main/plugin.php"
			}
		},
		{
			"step": "activatePlugin",
			"pluginName": "FooGallery Demo Plugin",
			"pluginPath": "foogallery-demo-plugin.php"
		},
        {
            "step": "installPlugin",
            "pluginData": {
                "resource": "wordpress.org/plugins",
                "slug": "foogallery"
            },
            "options": {
                "activate": true
            }
        },
        {
            "step": "login",
            "username": "admin",
            "password": "password"
        }
    ]
}