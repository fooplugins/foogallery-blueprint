{
    "$schema": "https://playground.wordpress.net/blueprint-schema.json",
    "landingPage": "/wp-admin/",
    "login": true,
    "preferredVersions": {
        "php": "8.3",
        "wp": "latest"
    },
    "steps": [
        {
            "step": "runPHP",
            "code": "<?php define( 'WP_FS__DEV_MODE', true ); define( 'WP_FS__SKIP_EMAIL_ACTIVATION', true ); ?>"
        },
        {
            "step": "installPlugin",
            "pluginData": {
                "resource": "wordpress.org/plugins",
                "slug": "foogallery"
            },
            "options": {
                "activate": true
            }
        },
        {
            "step": "login",
            "username": "admin",
            "password": "password"
        },
        {
            "step": "runPHP",
            "code": "<?php require_once('/wordpress/wp-load.php'); add_action( 'init', function() { foogallery_create_demo_content(); }); ?>"
        }
    ]
}